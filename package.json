{
    "name": "tapp",
    "version": "0.0.0",
    "private": true,
    "scripts": {
        "clean": "rimraf -g \"build/**\" \"packages/**/lib\" \"packages/**/*.tsbuildinfo\"",
        "compile": "tsc -b tsconfig.build.json",
        "prettier": "prettier \"*.{js,json,yml,md}\" \"packages/**/*\"",
        "format": "npm run prettier -- --write",
        "format:check": "npm run prettier -- --check",
        "lint": "npm run format:check",
        "build": "toolkit build app",
        "dev": "toolkit dev app",
        "ex": "toolkit cookbook uikit",
        "serve": "aws s3 --endpoint-url=https://storage.yandexcloud.net cp --recursive build/app/ s3://tapp-test/",
        "func:dev": "npm run compile && dev-func",
        "func:build": "toolkit build-func func-telegram-auth",
        "func:upload": "toolkit upload-func func-telegram-auth"
    },
    "devDependencies": {
        "prettier": "3.2.5",
        "rimraf": "5.0.5",
        "typescript": "5.4.2"
    },
    "workspaces": [
        "packages/*"
    ]
}
